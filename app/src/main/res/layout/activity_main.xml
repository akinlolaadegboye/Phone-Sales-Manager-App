                                    android:layout_height="wrap_content"

                                    android:textSize="14sp"
                                    android:textColor="#757575"
                                    android:textStyle="bold|normal"
                                    android:typeface="sans"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
