<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.salesrepmanager" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity
            android:name=".Activities.Splash"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
           >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".Activities.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"></activity>

        <activity android:name=".Activities.AddStock"
            android:label="@string/addStock"
            android:screenOrientation="portrait"></activity>

        <activity android:name=".Activities.ChangeProductPrice"
            android:label="@string/changeProductPrice"
            android:screenOrientation="portrait"></activity>

        <activity android:name=".Activities.ViewSales"
            android:label="@string/viewSales"
            android:screenOrientation="portrait"></activity>

        <activity android:name=".Activities.ViewStock"
            android:label="@string/viewStock"
            android:screenOrientation="portrait"></activity>

        <activity android:name=".Activities.RepRegistration"
            android:label="@string/repRegistration"
            android:screenOrientation="portrait"></activity>

    </application>


</manifest>
